generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model AudioListings {
  id              Int         @id @default(autoincrement())
  name            String
  price           Int
  category        String
  processing      String
  description     String
  lister_id       String      
  audio           String
  created_at      DateTime    @default(now()) 
  updated_at      DateTime    @updatedAt 
  user_name       String      @unique
}

model ProducerProfile {
  id                  Int         @id @default(autoincrement())
  user_name           String      @unique
  categories          String[]
  equipment           String[]
  related_link1_desc  String?
  related_link2_desc  String?
  related_link1       String?
  related_link2       String?
  description         String?
  lister_id           String      @unique
  created_at          DateTime    @default(now()) 
  updated_at          DateTime    @updatedAt  
}

 

model ChatRooms {
id                Int         @id @default(autoincrement())
created_at        DateTime    @default(now())
room_name         String
user1_id          String
user2_id          String
messages          Messages[]
}
model Messages {
id                Int         @id @default(autoincrement())
created_at        DateTime    @default(now()) 
content           String
lister_id         String
room_id           Int
chat_room         ChatRooms   @relation(fields:[room_id], references:[id], onDelete: Cascade)
}



